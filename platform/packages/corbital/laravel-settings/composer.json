{
  "name": "corbital/settings",
  "description": "Comprehensive settings management for Laravel applications",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Corbital Team",
      "email": "team@corbital.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "10.0|^11.0|^12.0",
    "spatie/laravel-settings": "^3.4"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Corbital\\Settings\\": "src/"
    },
    "files": [
      "src/Helpers/SettingsHelper.php",
      "src/Helpers/TenantSettingsHelper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Corbital\\Settings\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Corbital\\Settings\\Providers\\SettingsServiceProvider"
      ],
      "aliases": {
        "Settings": "Corbital\\Settings\\Facades\\Settings"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
